<div class="banner">
    <h1>Create a new list</h1>
</div>
<%= simple_form_for @list, wrapper: :bootstrap3_horizontal, defaults: {right_column_html: {class: "col-lg-3 col-md-3"},
                                                                       label_html: {class: "col-lg-2 col-md-2"} }, html: {class: "form-horizontal", role: "form"} do |f| %>
    <%= f.input :name, required:true %>
    <div class="col-md-2 col-md-offset-2">
        <%= f.button :submit, 'Create List', id: 'list_submit', class:'btn btn-primary' %>
    </div>
<% end %>
